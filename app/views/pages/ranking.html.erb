<div style="padding: 20px">
  <div style="display: flex; justify-content: center">
    <h1>Best Spots Now</h1>
  </div>

  <div>
    <% @ranking_hash.each_with_index do |location, index| %>
      <% if index == 0 %>
        <h3 style="font-size: 36px">
      <% elsif index == 1 %>
        <h3 style="font-size: 32px">
      <% elsif index == 2 %>
        <h3 style="font-size: 28px">
      <% else %>
        <h3 style="font-size: 26px">
      <% end %>
      <%= "#{index + 1}. #{Location.find(location[0]).site} - #{location[1].round}" %></h3>
    <% end %>
  </div>
</div>
