// If there are any errors in the submited form...
<% if @location.errors.any? %>
  // Refresh the form to display the validation errors
  document.getElementById('ModalNewLocation').innerHTML = "<%= j render "locations/form", location: @location %>";

  // Enable the autocomplete for the Location name
  var addressInput = document.querySelector('#ModalNewLocation #location_name');
  autoCompleteLocation(addressInput);
<% end %>
