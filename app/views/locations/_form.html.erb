<div class="modal-dialog modal-dialog-centered">
  <div class="modal-content">
    <div class="modal-header">
      <h4 class="modal-title" id="exampleModalLabel">New Location</h4>
      <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>

    <div class="modal-body">
      <%= simple_form_for(location, remote: true) do |f| %>
        <%= f.input :spot, label: false, placeholder: "Spot name" %>
        <%= f.input :name, label: false, placeholder: "Location" %>

        <div class="form-actions">
          <%= f.button :submit, class: "btn btn-flat btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
