<h1 class="page-title">All Locations</h1>

<!-- New Location button -->
<%= link_to "Create", data: { toggle: "modal", target: "#ModalNewLocation" }, class: "btn-new-instance" do %>
  <i class="fas fa-plus"></i>
<% end %>

<% if @locations.empty? %>
  <div class="card no-data">
    <h3>No locations saved yet</h3>
    <h5>Our predictions will be based on your existing locations</h5>
  </div>

<!-- Locations list -->
<% else %>
  <div id="cards-list">
    <%= render 'locations/list', locations: @locations %>
  </div>
<% end %>

<!-- Modal New Location Form -->
<div class="modal fade" id="ModalNewLocation" role="dialog">
  <%= render "locations/form", location: Location.new %>
</div>
