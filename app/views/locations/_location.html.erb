<li>
  <!-- Location info -->
  <div class="location-info">
    <!-- Location Name -->
    <h6>
      <strong><%= location[:name] %></strong>

      <% if location[:num_logs].zero? %>
        – no logs
      <% elsif location[:num_logs] == 1 %>
        – 1 log
      <% else %>
        <%= "– #{location[:num_logs]} logs" %>
      <% end %>
    </h6>

    <!-- Location Site -->
    <p class="locations-site">
      <%= location[:site] %>
    </p>
  </div>

  <!-- Icon of the Location weather right now -->
  <div style="background-image: url(http://openweathermap.org/img/wn/<%= location[:weather_icon] %>@2x.png)"
       class="weather-icon">
  </div>
</li>
