<!-- Iterate over the Logs list and display them as Cards -->
<% logs.each do |log| %>
  <%= link_to log_path(log) do %>
    <div class="card">
      <div class="card-headers">
        <!-- Cards Headers -->
        <div>
          <h3><%= log.location.name_to_display %></h3>
          <h5 class="locations-spot"><%= log.label %></h5>
        </div>

        <!-- Image of the Weather of the Log's Location -->
        <div style="background-image: url(http://openweathermap.org/img/wn/<%= log.weather_icon %>@2x.png)"
             class="weather-icon">
        </div>
      </div>

      <hr>

      <!-- Content of the Log -->
      <div class="card-content">
        <div>
          <% if log.catch_count == 0 %>
            <p><strong>Nothing caught</strong></p>

          <% else %>
            <p>
              <strong>Catches : </strong>
              <%= log.catch_count %>
            </p>
          <% end %>

          <% if log.rating.nil? %>
            <p><strong>Not rated</strong></p>

          <% else %>
            <p>
              <strong>Rating : </strong>
              <%= log.rating %>
            </p>
          <% end %>
        </div>

        <div>
          <p>
            <strong>Moon : </strong>
            <%= (log.moon_phase * 100).round %>%
          </p>

          <p>
            <%= log.stat_to_display %>
          </p>
        </div>
      </div>

      <!-- Card footer displaying the Log's Time -->
      <p class="card-footer-time">
        <%= log.start_time.strftime('%b %d')  %> | <%= (log.end_time - log.start_time).fdiv(60 * 60).ceil %> h
      </p>
    </div>
  <% end %>
<% end %>

<!-- Pagination to navigate the index of Logs -->
<%= will_paginate logs, renderer: WillPaginate::ActionView::BootstrapLinkRenderer,
    previous_label: "&laquo;", next_label: "&raquo;", inner_window: 1, outer_window: 0 %>
