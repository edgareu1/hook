<div id="log-page-title">
  <div id="log-page-title-name">
    <h1>- My Logs -</h1>
  </div>

  <%= link_to "Create", data: { toggle: "modal", target: "#ModalNewLog" }, style: "margin-left: 15px" do %>
    <i class="fas fa-plus" style="font-size: 26px; color: #010038"></i>
  <% end %>
</div>

<% @logs.each do |log| %>
  <%= link_to log_path(log) do %>
    <div class="row">
      <div class="col s8 m6">
        <div class="log-card">
          <div class="card-content white-text">
            <div>
              <h1 class="log-title"><%= "#{log.location.name} \##{sprintf '%04d', (log.tag_id)}" %></h1>
            </div>
            <hr>
            <div>
              <p id="log-card-time"><%= log.start_time.strftime("%d/%m/%Y")  %></p>
            </div>
            <div>
              <p id="catch-count">Catch: <%= log.catch_count %> </p>
            </div>
            <div>
               <p id="card-rating">Rating:  <%= log.rating %></p>
            </div>
            <hr>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>

<!-- Modal Create Log Form -->
<div class="modal fade" id="ModalNewLog" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title" style="color: #010038">New Log</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-body">
        <%= render "logs/form", log: Log.new %>
      </div>
    </div>
  </div>
</div>
