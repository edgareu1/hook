<div style="padding: 20px">
  <div style="display: flex">
    <h1>My Logs</h1>

    <%= link_to "Create", data: { toggle: "modal", target: "#ModalNewLog" }, style: "margin-left: 15px" do %>
      <i class="fas fa-plus" style="font-size: 36px; color: white; margin: 5px"></i>
    <% end %>
  </div>

  <div style="margin: 10px 0">
    <% @logs.each do |log| %>
      <%= link_to log_path(log) do %>
        <div class="log-card">
          <div class="card-headers">
            <h3><%= "#{log.location.name} \##{sprintf '%04d', (log.tag_id)}" %></h3>
          </div>

          <hr>

          <div class="card-content">
            <div class="card-content-info">
              <p style="font-size: 17px; font-weight: 600">
                  <%= log.start_time.strftime('%B %d')  %> (<%= (log.end_time - log.start_time).fdiv(60 * 60).ceil %>h)
              </p>

              <% if log.catch_count == 0 %>
                <p> <strong style="font-size: 17px">Nothing caught</strong> </p>
              <% else %>
                <p> <strong style="font-size: 17px">Catches:</strong> <%= log.catch_count %> </p>
              <% end %>

              <% if log.rating.nil? %>
                <p> <strong style="font-size: 17px">Not rated</strong> </p>
              <% else %>
                <p> <strong style="font-size: 17px">Rating:</strong> <%= log.rating %></p>
              <% end %>
            </div>

            <div class="card-content-stats">
              <p>Lunar Cycle</p>
              <p>Air Pressure</p>
              <p>Temperature</p>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <!-- Modal Create Log Form -->
  <div class="modal fade" id="ModalNewLog" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title" style="color: #010038">New Log</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body">
          <%= render "logs/form", log: Log.new %>
        </div>
      </div>
    </div>
  </div>
</div>
