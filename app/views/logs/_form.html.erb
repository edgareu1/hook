<!-- Get the form action -->
<% log_action = log.id.nil? ? "new" : "edit" %>

<div class="modal-dialog modal-dialog-centered">
  <div class="modal-content">
    <div class="modal-header">
      <h4 class="modal-title"><%= log_action.capitalize %> Log</h4>
      <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>

    <div class="modal-body">
      <%= simple_form_for(log, remote: true) do |f| %>
        <div class="container-log-form">
          <!-- Location input -->
          <div class="form-group select log_location d-flex">
            <label for="log_location_id">Location</label>

            <select class="form-control" name="log[location_id]" id="log_<%= log_action %>_location_id">
              <% if log.location.nil? %>
                <option>Please Select</option>
              <% end %>

              <% current_user.locations.sort_by { |loc| loc.spot.downcase }.each do |location| %>
                <option <%= "selected=selected" if location == log.location %> value="<%= location.id %>">
                  <%= location.spot %>
                </option>
              <% end %>
            </select>
          </div>

          <div class="invalid-feedback log_<%= log_action %>_location_id_error"></div>

          <!-- Starting Time input -->
          <div class="d-flex">
            <label for="log_start_time">Starting time</label>
            <input type="datetime-local" class="form-control" id="log_<%= log_action %>_start_time" name="log[start_time]"
                   value="<%= (log.start_time || Time.now).strftime('%Y-%m-%dT%H:%M') %>">
          </div>

          <!-- Ending Time input -->
          <div class="d-flex" style="margin-bottom: 5px">
            <label for="log_end_time">Ending time</label>
            <input type="datetime-local" class="form-control" id="log_<%= log_action %>_end_time" name="log[end_time]"
                   value="<%= (log.end_time || Time.now).strftime('%Y-%m-%dT%H:%M') %>">
          </div>

          <div class="invalid-feedback log_<%= log_action %>_start_time_error log_<%= log_action %>_end_time_error"></div>

          <% unless log.id.nil? %>
            <!-- Temperature input -->
            <div class="form-group float log_temperature d-flex">
              <label for="log_temperature">Temperature</label>
              <input class="form-control" id="log_temperature" placeholder="°C" type="number" step="1"
                     name="log[temperature]" value="<%= log.temperature %>">
              <p>°C</p>
            </div>

            <div class="invalid-feedback log_temperature_error"></div>

            <!-- Air Pressure input -->
            <div class="form-group integer log_air_pressure d-flex">
              <label for="log_air_pressure">Air pressure</label>
              <input class="form-control" id="log_air_pressure" placeholder="Pa" type="number" step="1"
                     name="log[air_pressure]" value="<%= log.air_pressure %>">
              <p>Pa</p>
            </div>

            <div class="invalid-feedback log_air_pressure_error"></div>

            <!-- Wind Speed input -->
            <div class="form-group float log_wind_speed d-flex">
              <label for="log_wind_speed">Wind speed</label>
              <input class="form-control" id="log_wind_speed" placeholder="m/s" type="number" step="1"
                     name="log[wind_speed]" value="<%= log.wind_speed %>">
              <p>m/s</p>
            </div>

            <div class="invalid-feedback log_wind_speed_error"></div>
          <% end %>

          <!-- Observation input -->
          <div class="form-group text log_observation">
            <label for="log_observation">Observations</label>
            <textarea class="form-control" id="log_<%= log_action %>_observation" placeholder="Leave an observation"
                      name="log[observation]"><%= log.observation.nil? ? "" : log.observation.strip %></textarea>
          </div>

          <div class="invalid-feedback log_<%= log_action %>_observation_error"></div>

          <p>Rate your session</p>

          <!-- Rating input as a dynamic filling image -->
          <div class="fish-rating-container">
            <div class="fish-rating">
              <img src="https://res.cloudinary.com/da7rlfd8u/image/upload/v1594265095/eel_axssqv.png" alt="fish-rating">

              <input type="hidden" name="log[rating]" value="">

              <% (1..10).to_a.reverse.each do |num| %>
                <input type="radio" value="<%= num %>" name="log[rating]" id="<%= "log_rating_#{log_action}_#{num}" %>"
                       <%= "checked" if log.rating == num %>>
                <label for="<%= "log_rating_#{log_action}_#{num}" %>" class="rating<%= num %>"
                       style="left: <%= (num - 1) * 10 %>%"></label>
                <label2 class="rating<%= num %>" style="left: <%= (num - 1) * 10 %>%"></label2>
              <% end %>
            </div>

            <div class="fish-rating-bar">
              <% (1..10).to_a.each do |num| %>
                <div class="rating<%= num %>" style="left: <%= (num - 1) * 10 %>%">
                  <%= num %>
                </div>
              <% end %>
            </div>
          </div>

          <!-- Submit Button -->
          <%= f.button :submit, class: "btn btn-flat btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
