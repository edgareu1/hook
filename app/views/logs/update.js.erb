// Refresh the form
document.getElementById('ModalEditLog').innerHTML = "<%= j render "logs/form", log: @log %>";

// If there are any errors in the submited form, then add error messages
<% if @log.errors.any? %>
  displayTimeErrors(`<%= @time_errors.first %>`, 'edit');

  displayLogFormErrors('location_id', `<%= @log.errors.full_messages_for(:location).first %>`);
  displayLogFormErrors('temperature', `<%= @log.errors.full_messages_for(:temperature).first %>`);
  displayLogFormErrors('air_pressure', `<%= @log.errors.full_messages_for(:air_pressure).first %>`);
  displayLogFormErrors('wind_speed', `<%= @log.errors.full_messages_for(:wind_speed).first %>`);

// Otherwise close the Modal and refresh the Log information displayed
<% else %>
  document.querySelector('#ModalEditLog button').click();

  document.getElementById('log-information').innerHTML = "<%= j render "logs/information", log: @log %>";
<% end %>
