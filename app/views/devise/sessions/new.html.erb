<div class="devise-container">
  <div style="text-align: center">
    <%= image_tag "hook-logo.png" %>
  </div>

  <h2>Log in</h2>

  <div class="demo-account-notification">
    <h3>Check the demo account:</h3>

    <p style="margin-bottom: 1px;">username: Demo</p>
    <p>password: 123456</p>
  </div>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :login,
                  required: false,
                  autofocus: true,
                  placeholder: "username or email",
                  input_html: { autocomplete: "login" } %>

      <%= f.input :password,
                  required: false,
                  placeholder: "••••••",
                  input_html: { autocomplete: "current-password" } %>

      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "btn btn-flat" %>
    </div>
  <% end %>

  <%= link_to "Sign up", new_registration_path(resource_name) %>
</div>

<div class="footer">
  <div id="jsi-flying-fish-container" class="fish-container"></div>
</div>
