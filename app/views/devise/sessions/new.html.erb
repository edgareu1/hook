

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6" style="margin-top: auto; margin-left: auto; margin-right: auto; margin-bottom: 20px">
       
        <div class="form-login">

      

        <h2>Log in</h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :login,
                        required: false,
                        autofocus: true,
                        placeholder: "username or email",
                        input_html: { autocomplete: "login" } %>
            <%= f.input :password,
                        required: false,
                        placeholder: "••••••",
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
              <%= f.button :submit,"Log in", class: "btn btn-flat" %>
          </div>
        <% end %>
      
        <%= render "devise/shared/links" %>

      </div>
    <div class="footer">
  <div id="jsi-flying-fish-container" class="fish-container"></div>
</div>
    </div>

  </div>

</div>














