<div class="modal-dialog modal-dialog-centered">
  <div class="modal-content">
    <div class="modal-header">
      <h4 class="modal-title">New Catch</h4>
      <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>

    <div class="modal-body">
      <%= simple_form_for([@log, catch], remote: true) do |f| %>
        <div class="container-catch-form">
          <table>
            <tr>
              <th><%= f.label :quantity, "Qnt" %></th>
              <th><%= f.label :fish,     "Species name" %></th>
              <th><%= f.label :weight,   "Weight" %></th>
            </tr>

            <tr>
              <td><%= f.input :quantity, label: false, input_html: { value: f.object.quantity || "1" } %></td>

              <td>
                <%= f.association :fish, collection: Fish.all.sort_by(&:name), label_method: :name, label: false,
                                  prompt: "Please select" %>
              </td>

              <td><%= f.input :weight, label: false, placeholder: "gr" %></td>
            </tr>
          </table>

          <div class="invalid-feedback" id="catch_new_errors"></div>

          <%= f.button :submit, class: "btn btn-flat btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
