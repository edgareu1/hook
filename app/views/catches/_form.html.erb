<div class="modal-dialog modal-dialog-centered">
  <div class="modal-content">
    <div class="modal-header">
      <h4 class="modal-title">New Catch</h4>
      <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>

    <div class="modal-body">
      <%= simple_form_for([@log, catch], remote: true) do |f| %>
        <div class="container-catch-form">
          <table>
            <tr>
              <th> <%= f.label :quantity, "Qnt." %> </th>
              <th> <%= f.label :fish, "Species name" %> </th>
              <th> <%= f.label :weight %> </th>
            </tr>

            <tr>
              <td style="width: 60px">
                <%= f.input :quantity, label: false, input_html: { value: f.object.quantity || '1' } %>
              </td>

              <td style="width: 280px">
                <%= f.association :fish, collection: Fish.all.sort_by(&:common_name), prompt: "Please select",
                    label_method: :common_name, label: false %>
              </td>

              <td style="width: 100px">
                <%= f.input :weight, label: false, placeholder: "gr" %>
              </td>
            </tr>
          </table>

          <%= f.button :submit, class: "btn btn-flat btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
