<div class="page-container">
  <%= form_tag fish_index_path, method: :get do %>
    <div class="d-flex" style="margin-top: 10px">
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        id: "search-input",
        placeholder: "Search by name",
        autocomplete: "off"
      %>

      <%= submit_tag "Search", class: "btn btn-fish-search" %>
    </div>
  <% end %>

  <% @fish.each do |fish| %>
    <%= link_to fish_path(fish), data: { id: fish.id } do %>
      <div class="fish-card" style="margin-top: 20px">
        <div class="card-fish-img">
          <%= image_tag fish.picture_url %>
        </div>

        <div class="fish-card-info">
          <h2><%= fish.common_name.upcase %></h2>

          <p style="padding: 0 10px 10px 20px; margin: 0">
            Minimum size:
            <%= fish.display_legal_dimensions %>
          </p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
