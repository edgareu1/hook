<div class="container">
  <%= form_tag fish_index_path, method: :get do %>
    <div class="d-flex mt-2">
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find a fish"
      %>
      <%= submit_tag "Search", class: "btn btn-primary" %>
    </div>
  <% end %>

  <% @fish.each do |fish| %>
    <%= link_to fish_path(fish) do %>
    <div class="fish-card">
      <%= image_tag fish.picture_url %>
      <div class="fish-card-infos">
        <h2><%= fish.common_name.upcase %></h2>
        <% if fish.legal_size == 0%>
          <p>Minimum Weight:  <%= fish.legal_weight %>kg</p>
        <% else %>
          <p>Minimum Length:  <%= fish.legal_size %>cm</p>
        <% end %>
      </div>
    </div>
    <% end %>
  <% end %>
</div>
