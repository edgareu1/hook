<div class="page-container">
  <%= link_to 'Back', fish_index_path, class: "btn btn-flat", style:"margin: 10px" %>

  <div class="fish-card">
    <div class="card-fish-img">
      <%= image_tag @fish.picture_url %>
    </div>

    <div class="fish-card-info">
      <h2><%= @fish.common_name.upcase %></h2>

      <p style="padding: 0 20px">
        Minimum size:
        <%= @fish.display_legal_dimensions %>
      </p>

      <p style="color: #9BDDF9; padding: 0 10px"><%= @fish.description %></p>

      <p><%= link_to "Learn more", @fish.url, target: "_blank", class: "fish-more-info" %></p>
    </div>
  </div>
</div>
